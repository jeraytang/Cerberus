@{
    ViewData["Title"] = "Client";
}

@section Styles
{
    <style>
        .modal-header, .modal-footer{
            border: 0;
        }
    </style>
}

<div class="row">
    <div class="col-sm-8">
        <h5>
            Client
            <small></small>
        </h5>
    </div>
    <div class="col-sm-4">
        <button class="btn btn-outline-primary float-right" data-toggle="modal" data-target="#addModal">Add</button>
    </div>
</div>
<br/>
<div class="row">
    <div class="col-md-12">
        <table class="table table-bordered" style="width: 100%">
            <thead>
            <tr>
                <th style="width: 25px;"></th>
                <th>ClientId</th>
                <th>ClientName</th>
                <th>GrantType</th>
                <th>Scopes</th>
                <th>RedirectUris</th>
                <th style="width: 225px">Action</th>
            </tr>
            </thead>
            <tbody>
            <tr v-if="clients.length===0">
                <td colspan="7">None</td>
            </tr>
            <tr :id="client.id" v-else v-for="client in clients">
                <td v-if="client.enabled" class="badge-success"></td>
                <td v-else class="badge-warning"></td>
                <td v-text="client.clientId"></td>
                <td v-text="client.clientName"></td>
                <td v-text="client.grantType"></td>
                <td v-text="client.scopes"></td>
                <td v-text="client.redirectUris"></td>
                <td>
                    <a title="edit" class="btn btn-outline-primary" :href="'/clients/' + client.id"><i class="fa fa-fw fa-edit"></i></a>
                    @* <a class="btn btn-outline-primary" :href="'/clients/' + client.id + '/claims'">Claims</a> *@
                    <a title="secrets" class="btn btn-outline-primary" :href="'/clients/' + client.id + '/secrets'"><i class="fa fa-fw fa-user-secret"></i></a>
                    <button title="disable" v-if="client.enabled" class="btn btn-outline-primary" v-on:click="disable"><i class="fa fa-fw fa-lock"></i></button>
                    <button title="enable" v-else class="btn btn-outline-primary" v-on:click="enable"><i class="fa fa-fw fa-unlock"></i></button>
                    <button title="remove" class="btn btn-outline-primary" v-on:click="remove"> <i class="fa fa-fw fa-trash"></i></button>
                </td>
            </tr>
            </tbody>
        </table>
    </div>
</div>
<div class="row" v-if="count > limit">
    <div class="col-md-12">
        <pagination :page="page" :count="count" :limit="limit"></pagination>
    </div>
</div>
<div class="modal fade" id="addModal">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <!-- 模态框头部 -->
            <div class="modal-header">
                <h4 class="modal-title">Add client</h4>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>
            <!-- 模态框主体 -->
            <div class="modal-body">
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label>ClientId</label>
                            <input type="text" v-model="client.clientId" class="form-control"/>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label>ClientName</label>
                            <input type="text" v-model="client.clientName" class="form-control"/>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label>GrantType</label>
                            <select2 style="width: 100%" :options="grantTypes" v-model="client.allowedGrantTypes">
                            </select2>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label>Scopes</label>
                            <input v-model="client.allowedScopes" type="text" class="form-control"/>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group">
                            <label>Description</label>
                            <textarea v-model="client.description"  type="text" class="form-control"></textarea>
                        </div>
                    </div>
                </div>
            </div>

            <!-- 模态框底部 -->
            <div class="modal-footer">
                <button type="button" v-on:click="submit" class="btn btn-outline-primary">Submit</button>
                <button type="button" class="btn btn-outline-secondary" data-dismiss="modal">Cancel</button>
            </div>

        </div>
    </div>
</div>

@section Scripts
{
    <environment names="Development">
        <script src="~/js/client.js" asp-append-version="true"></script>
    </environment>
    <environment names="Staging,Production">
        <script src="~/js/client.min.js" asp-append-version="true"></script>
    </environment>
}