@model IdentityServer4.SecurityTokenService.Models.Account.ForgotPasswordViewModel
@{
    ViewData["Title"] = "Forgot your password?";
}

<h4>Enter your email.</h4>
<hr/>
<form asp-controller="Account" asp-action="ForgotPassword" method="post" class="form-horizontal" role="form">
    <partial name="_ValidationSummary"/>
    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                <label>Input your email</label>
                <input asp-for="Email" class="form-control"/>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                <button type="submit" class="btn btn-sm btn-outline-primary">Submit</button>
            </div>
        </div>
    </div>


</form>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}